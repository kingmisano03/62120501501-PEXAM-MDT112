#include <Wire.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27, 16, 2);
int MotorPin2 = 2;
int MotorPin3 = 3;

void setup()
{
  pinMode(MotorPin2, OUTPUT);
  pinMode(MotorPin3, OUTPUT);
  Serial.begin(9600);
  lcd.begin();
  lcd.backlight();
  lcd.setCursor(2, 1); 
  lcd.print("Turn CCW"); 
}
void loop()
{
  digitalWrite(MotorPin2, LOW); 
  digitalWrite(MotorPin3, HIGH); 
  Serial.println("Motor left");
  delay(2000);
}







  
  
 

